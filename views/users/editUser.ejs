<%- include('../partials/head', {title})%> <%- include('../partials/header')%>
<%- include('../partials/nav')%>
<div class="container--fixed">
	<main>
		<form
			action="/users/update/<%= userToEdit.id %>?_method=PUT"
			method="POST"
			class="login-container"
			enctype="multipart/form-data"
		>
			<h3>Edit User</h3>
			<div class="input-container">
				<label for="nombre">Nombre</label>
				<input
					type="text"
					id="nombre"
					name="nombre"
					placeholder="Usuario"
					enctype="multipart/form-data"
					value="<%= locals.errors && errors.nombre ? errors.nombre.value : userToEdit.nombre %>"
				/>
				<% if (locals.errors && errors.nombre) { %>
				<div class="text-danger"><%= errors.nombre.msg %></div>
				<% } %>
			</div>
			<div class="input-container">
				<label for="apellido">Apellido</label>
				<input
					type="text"
					id="apellido"
					name="apellido"
					placeholder="Apellido"
					value="<%= locals.errors && errors.apellido ? errors.apellido.value : userToEdit.apellido %>"
				/>
				<% if (locals.errors && errors.apellido) { %>
				<div class="text-danger"><%= errors.apellido.msg %></div>
				<% } %>
			</div>
			<div class="input-container">
				<label for="email">Email</label>
				<input
					type="email"
					id="email"
					name="email"
					placeholder="Email"
					value="<%= locals.errors && errors.email ? errors.email.value : userToEdit.email %>"
				/>
				<% if (locals.errors && errors.email) { %>
				<div class="text-danger"><%= errors.email.msg %></div>
				<% } %>
			</div>
			<div class="input-container">
				<label for="avatar">Avatar</label>
				<input type="file" id="avatar" name="avatar" />
				<% if (locals.errors && errors.avatar) { %>
					<div class="text-danger"><%= errors.avatar.msg %></div>
					<% } %>
			</div>
			<button type="submit" class="btn">Actualizar</button>
		</form>
		<div class="btn-container">
			<a href="/users/profile" class="btn btn-product-edit btn-anchor">Volver</a>
			<a href="/users/delete/<%= userToEdit.id %>" class="btn btn-product-edit btn-anchor danger">Borrar Perfil</a>
		</div>
			
	</main>
</div>
<%- include('../partials/footer') %>
