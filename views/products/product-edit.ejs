<%- include('../partials/head', {title})%>
<%- include('../partials/header')%>
<%- include('../partials/nav')%>
<div class="container--fixed">
    <main>
        <section class="product-edit__form">
            <form action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
                <h1>Editando <%= product.name %></h1>
                <div class="input-container">
					<label for="name">Nombre</label>
					<input type="text" name="name" id="name" value="<%= product.name%>">
				</div>
				<div class="input-container">
					<label for="category">Categoría:</label>
					<select name="category" id="category">
					<% for (let i = 0; i < categories.length; i++) { %>
						<% if (categories[i].id == product.category_id) { %>
							<option value="<%=categories[i].id%>" selected>
								<%=categories[i].name%>
							</option>
							<% } else { %>
							<option value="<%=categories[i].id%>">
								<%=categories[i].name%>
							</option>
							<% } %>
						<% } %>
					</select>
				</div>
				<div class="input-container">
					<label for="brand">Marca:</label>
					<select name="brand" id="brand">
					<% for (let i = 0; i < brands.length; i++) { %>
						<% if (brands[i].id == product.brand_id) { %>
							<option value="<%=brands[i].id%>" selected>
								<%=brands[i].name%>
							</option>
							<% } else { %>
							<option value="<%=brands[i].id%>">
								<%=brands[i].name%>
							</option>
							<% } %>
						<% } %>
					</select>
				</div>
				<div class="input-container">
					<label for="shortDesc">Descripción breve</label>
					<textarea name="shortDesc" cols="30" rows="3" id="shortDesc"> <%= product.shortDesc%></textarea>
				</div>
				<div class="input-container">
					<label for="longDesc">Descripción detallada</label>
					<textarea name="longDesc" cols="30" rows="10" id="longDesc"> <%= product.longDesc%> </textarea>
				</div>
				<div class="input-container">
					<label for="color">Color:</label>
					<select name="color" id="color">
					<% for (let i = 0; i < colors.length; i++) { %>
						<% if (colors[i].id == product.color_id) { %>
							<option value="<%=colors[i].id%>" selected>
								<%=colors[i].name%>
							</option>
							<% } else { %>
							<option value="<%=colors[i].id%>">
								<%=colors[i].name%>
							</option>
							<% } %>
						<% } %>
					</select>
				  </div>
				<div class="input-container">
					<label for="price">Precio</label>
					<input type="text" name="price" id="price" value="<%= product.price%>">
				</div>
                <div class="input-container">
					<label for="image">Imágen actual</label>
                    <img class="edit-img" src="/images/products/<%= product.image%>" alt="">
				</div>
				<div class="input-container">
					<label for="newImage">Actualizar imágen</label>
					<input type="file" name="newImage" id="newImage">
				</div>
				<div class="input-container">
					<div class="input-container">
						<p>Envío gratis:</p>
						<% if (product.dispatch == 1) { %>
							<input type="radio" id="dispatchYes" name="dispatch" value="1" checked>
							<label for="dispatchYes">Si</label><br>
							<input type="radio" id="dispatchNo" name="dispatch" value="0">
							<label for="dispatchNo">No</label><br>  
						<% } else { %>
							<input type="radio" id="dispatchYes" name="dispatch" value="1">
							<label for="dispatchYes">Si</label><br>
							<input type="radio" id="dispatchNo" name="dispatch" value="0" checked>
							<label for="dispatchNo">No</label><br>  
						<% } %>
					  </div>
				</div>
				<div class="input-container">
					<label for="discount">Descuento </label>
					<input type="text" name="discount" id="discount" value="<%= product.discount %>">
				</div>
				<div class="input-container">
					<label for="stock">Stock disponible </label>
					<input type="text" name="stock" id="stock" value="<%= product.stock %>"
				</div>
				  <div class="btn-product-create-container">
                    <button type="submit" class="btn btn-product-edit">Guardar Cambios</button>
                </div>
            </form>
            <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-product-edit">Eliminar</button>
				<a href="/products" class="btn btn-product-edit btn-anchor">Volver</a>
            </form>
        </section>
    </main>
</div>
<%- include('../partials/footer') %>