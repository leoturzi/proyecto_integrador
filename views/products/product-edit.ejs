<%- include('../partials/head', {title})%>
<%- include('../partials/header')%>
<%- include('../partials/nav')%>
<div class="container container-product-edit--fixed">
    <main>
        <section class="product-edit-form-container">
            <form action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
                <h1>Editando <%= product.name %></h1>
                <div class="input-container">
					<label for="name">Nombre</label>
					<input type="text" name="name" id="name" value="<%= product.name%>">
				</div>
				<div class="input-container">
					<label for="category">Categoría (drums, guitar, trumpet, bass, oboe, clarinet, amplifier, microphone)</label>
					<input type="text" name="category" id="category" value="<%= product.category%>">
				</div>
				<div class="input-container">
					<label for="brand">Marca</label>
					<input type="text" name="brand" id="brand" value="<%= product.brand %>">
				</div>
				<div class="input-container">
					<label for="shortDesc">Descripción breve</label>
					<textarea name="shortDesc" cols="30" rows="3" id="shortDesc"> <%= product.shortDesc%>"</textarea>
				</div>
				<div class="input-container">
					<label for="longDesc">Descripción detallada</label>
					<textarea name="longDesc" cols="30" rows="10" id="longDesc"> <%= product.longDesc%> </textarea>
				</div>
				<div class="input-container">
                    <label for="color">Color</label>
                    <input type="text" name="color" id="color" value="<%= product.color%>">
                </div>
				<div class="input-container">
					<label for="price">Precio</label>
					<input type="text" name="price" id="price" value="<%= product.price%>">
				</div>
                <div class="input-container">
					<label for="image">Imágen actual</label>
                    <img class="edit-img" src="/images/products/<%= product.image%>" alt="">
				</div>
				<div class="input-container">
					<label for="newImage">Actualizar imágen</label>
					<input type="file" name="newImage" id="newImage">
				</div>
				<div class="input-container">
					<label for="dispatch">Envío Gratis (Si/No)</label>
					<input type="text" name="dispatch" id="dispatch" value="<%= product.dispatch ? 'Si' : 'No' %>">
				</div>
				<div class="input-container">
					<label for="discount">Descuento </label>
					<input type="text" name="discount" id="discount" value="<%= product.discount %>">
				</div>
				<div class="input-container">
					<label for="lastVisited">Ultima Visita (Si/No)</label>
					<input type="text" name="lastVisited" id="lastVisited" value="<%= product.lastVisited ? 'Si' : 'No' %>">
				</div>
                <div class="btn-product-create-container">
                    <button type="submit" class="btn btn-product-edit">Guardar Cambios</button>
                </div>
            </form>
            <form action="/products/<%= product.id %>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-product-edit">Eliminar</button>
				<a href="/products" class="btn btn-product-edit btn-anchor">Volver</a>
            </form>
        </section>
    </main>
</div>
<%- include('../partials/footer') %>